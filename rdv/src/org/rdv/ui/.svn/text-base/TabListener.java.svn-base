package org.rdv.ui;

import java.awt.Component;

/**
 * A listener interface for the TabbedPane class.
 * 
 * @author Josh Mattila
 */
public interface TabListener {

  /**
   * A method to notify the listener that a tab has been added to the
   * TabbedPane.
   * 
   * @param pane
   */
  public void tabAdded(int tabIndex);

  /**
   * A method to notify the listener that a tab has been removed from the
   * TabbedPane.
   * 
   * @param pane
   */
  public void tabRemoved(Component c);
  
  /**
   * A method to notify the listener that a tab has been removed from the
   * TabbedPane.
   * 
   * @param pane
   */
  public void tabRenamed(int tabIndex);

}
